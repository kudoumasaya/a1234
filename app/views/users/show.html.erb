<div id="user_show">
<h1>アカウント情報</h1>
<p>お名前：<%= @user.name %></p>
<p>メールアドレス：<%= @user.email %></p>
<p><%= link_to "アカウントの編集", edit_user_path %></p>
<hr>
</div>
<div id=user_show_survey>
    <% if @user.surveys.any? %>
    	<h1>登録している調査数 <%= @surveys.count %> 件</h1>
        <h2>登録している調査名</h2>
        <% @surveys.each do |survey| %>
            <p><%= link_to survey.name, controller: "surveys", action: "show", id: survey.id %></p>
        <% end %>
    <% end %>
</div>
